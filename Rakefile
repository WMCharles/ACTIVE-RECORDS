# hello is the task
# to run the task type rake task_name on terminal
# to use rate -T your task needs a description
# desc syntax is desc 'description'
# you can use namespace to group your tasks

namespace :mytasks do
    desc 'prints hello world'
    task :hello do 
        puts "Hello world"
    end
    
    desc 'code code code code code'
    task :code do 
        puts "Talk is cheap. Show me the code!"
    end
end